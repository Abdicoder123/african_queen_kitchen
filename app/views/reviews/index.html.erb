<h1 class="text-center my-4">African Queen Kitchen Reviews</h1>

<div class="container">
  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= review.user.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %> / 5</h6>
            <p class="card-text"><strong>Comment:</strong> <%= review.comment %></p>

            <% if user_signed_in? %>
              <%= link_to 'Show Details', review_path(review), class: 'btn btn-info btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3 text-center">
    <%= link_to 'Write a Review', new_review_path, class: 'btn btn-primary' %>
  </div>
</div>
