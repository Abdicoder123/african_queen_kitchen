<h1>Review for <%= @review.user.name %></h1>

<p><strong>Rating:</strong> <%= @review.rating %></p>
<p><strong>Comment:</strong> <%= @review.comment %></p>

<div class="btn-group" role="group" aria-label="Review Actions">
  <%= link_to 'Edit', edit_review_path(@review), class: 'btn btn-primary' %>
  <%= link_to 'Back to Reviews', reviews_path, class: 'btn btn-secondary' %>

  <%= form_with(model: @review, method: :delete, data: { confirm: 'Are you sure you want to delete this review?' }, html: { class: 'd-inline' }) do %>
    <%= submit_tag 'Delete', class: 'btn btn-danger' %>
  <% end %>
</div>
