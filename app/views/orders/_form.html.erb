<%= form_with(model: @order, local: true) do |form| %>
  <h3>Fill out the form below</h3>
  <div>
    <%= form.label :delivery_date %>
    <%= form.date_field :delivery_date %>
  </div>


  <div>
    <%= form.label :event_details, "Event Details" %>
    <%= form.text_area :event_details %>
  </div>

  <div>
    <%= form.label :group_size, "Group Size" %>
    <%= form.number_field :group_size, min: 1 %>
  </div>

  <div>
    <%= form.submit "Save Order" %>
  </div>
  <% end %>
  