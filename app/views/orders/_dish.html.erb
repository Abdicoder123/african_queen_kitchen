<!-- This div contains the dish name, quantity, 
and the total price (price of dish * quantity) -->

<div>
  <% @order_dishes.each do |dish| %>
    <li>
      Dish name: <%= dish.dish.title %>
    </li>
    <li>
      Quantity: <%= dish.quantity %>
    </li>
    <li>
      Total price: <%= dish.price %>
    </li>
  <% end %>
</div>