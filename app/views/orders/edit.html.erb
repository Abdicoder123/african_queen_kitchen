<h1>Order Continuation</h1> <hr>
<h3> Manage your Dishes!</h3>

<div class="container mt-4">
  <div class="card shadow-lg">
    <div class="card-body">
      <div class="row">
        <!-- Dishes Column -->
        <div class="col-md-6">
          <h3>Dishes in this Order</h3>
          <!-- Render dishes -->
          <%= render 'dish' %>
        </div>
        
      
        <!-- Order Dishes Form Column -->
        <div class="col-md-6">
          <% if @order.status == 'Order Creation' %>
            <%= render 'order_dishes/form', order: @order %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<hr>
<h3>Edit your Order Details</h3>

<!-- Renders order details -->
<%= render 'form', button_text: "Submit Order" %>

