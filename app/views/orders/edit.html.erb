<h1>Order Continuation</h1>
<h3>Dishes in this Order</h3>

<!-- Renders the dishes in the order -->
<%= render 'dish' %>

<!-- Users can only add dishes to their orders if the status of their order is "Order Creation" -->
<% if @order.status === 'Order Creation' %>
    <%= render 'order_dishes/form', order: @order %>
<% end %>

<h3>Edit Order Details</h3>

<!-- Renders order details -->
<%= render 'form', button_text: "Submit Order" %>

